<body>
	
	<h2><%=@concert.artist%></h2>
	<p><%=@concert.venue%> - <%=@concert.city%></p>
	<p><%=@concert.date.strftime("%B %d, at %I:%M %p")%>  <strong><em>$<%=@concert.price%></strong></em></p>

	<h3>Comments</h3>
		<ul>
			<%@new_comments.each do |item| %>
				<li>
					<%=item.comment%>
					<small><%=item.name%></small>
				</li>
			<% end %>
		</ul>
	
	<p>Leave a Comment!</p>
		<%=form_for [@concert, @comment] do |f|%>
			<%= f.label :comment %>:
			<%= f.text_field :comment %>
			<br>
			<%= f.label :name %>:
			<%= f.text_field :name %>

			<%=f.submit%>
			<% end %>


</body>